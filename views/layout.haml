!!! 1.1
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title Anthill

    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0, maximum-scale=1.0'}
    %meta{name: 'robots', content: 'none'}
    %link{rel:  'stylesheet', href:  '/css/bootstrap.min.css', type:  'text/css'}
    %link{rel:  'stylesheet', href:  '/css/font-awesome.min.css', type:  'text/css'}
    %link{rel:  'stylesheet', href:  '/css/jquery-ui.min-1.10.2.css', type:  'text/css'}
    %link{rel:  'stylesheet', href:  '/css/google-webfonts-cedarville-cursive.css', type: 'text/css'}
    %link{rel:  'stylesheet', href:  '/css/codemirror.css', type:  'text/css'}
    %link{rel:  'stylesheet', href:  '/css/cobalt.css', type:  'text/css'}
    
    %script{type: 'text/javascript', src: "/js/jquery.min-1.9.1.js"}
    %script{type: 'text/javascript', src: "/js/jquery-ui.min-1.10.2.js"}
    %script{type: 'text/javascript', src: "/js/bootstrap.min.js"}
    %script{type: 'text/javascript', src: "/js/codemirror.js"}
    %script{type: 'text/javascript', src: "/js/ruby.js"}
    / [if lt IE 9]
      %script{src: "/js/html5.js"}
    

  %body
    .container
      .navbar.navbar-default
        .container-fluid
          .navbar-header
            %a.navbar-brand{href: "/"} 
              %i.fa.fa-th
              Anthill
          .navbar-collapse.pull-right
            %ul.nav.navbar-nav
              %li
                %a{href: "/logout"} 
                  %i.fa.fa-power-off
                  Sign Out  
          .navbar-collapse.collapse
            %ul.nav.navbar-nav
              %li
                %a{href: "/workers"} 
                  %i.fa.fa-gear
                  Workers
            
              %li
                %a{href: "/programs"} 
                  %i.fa.fa-code
                  Programs
              
      =yield
    %br
    %footer
      %p.footer &copy; Chang Sau Sheong 2014
      
:css
  a:link { text-decoration: none; }
  body { padding-top: 20px; font-family: "Helvetica Neue", Helvetica, Arial, Sans Serif; }
  p {font-size: 16px; line-height: 140%; }  
  .worker {height: 250px; background-color: LightCyan;}
  .worker-add {height: 250px; background-color: whitesmoke;}
  .program {height: 250px; background-color: LightYellow;}
  .program-add {height: 250px; background-color: whitesmoke;}

  .content {
    background-color: #fff;
    padding: 20px 20px 20px 20px;
    -webkit-border-radius: 3px 3px 3px 3px;
       -moz-border-radius: 3px 3px 3px 3px;
            border-radius: 3px 3px 3px 3px;
    -webkit-box-shadow: 0 0px 6px 0px rgba(0,0,0,.3);
       -moz-box-shadow: 0 0px 6px 0px rgba(0,0,0,.3);
            box-shadow: 0 0px 6px 0px rgba(0,0,0,.3);
  }  
  .center { text-align: center}
  .footer { text-align:center; color:#999999; }

:javascript
  var editor = document.getElementById("editor");
  CodeMirror.fromTextArea(editor, {
    autofocus: true,
    mode: 'text/x-ruby',
    matchBrackets: true,
    theme: 'cobalt',
    indentUnit: 2,
    lineNumbers: true      
  });
